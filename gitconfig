[user]
    name = jeffrom
    email = jeffmartin@gmail.com
[branch "master"]
    remote = origin
    merge = refs/heads/master
[branch "dev"]
    remote = origin
    merge = refs/heads/dev
[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
    blame = auto
[alias]
    st = status
    dst = diff --name-status
    ci = commit #-v
    co = checkout
    br = branch
    dc = diff --cached
    df = diff --word-diff
    last = log -1 HEAD
    unstage = reset HEAD
    lc = log ORIG_HEAD.. --stat --no-merges
    new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}.. && echo'
    standup = "!git log --since yesterday --author `git config user.email`"
[push]
    default = tracking

[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
